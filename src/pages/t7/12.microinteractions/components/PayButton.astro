
    <style>
      :root {
        --dark-green: #0b5137;
      }
     
      button {
        color: white;
        background: var(--dark-green);
        border: none;
        padding: 1.5rem 4.5rem;
        font-size: 3rem;
        font-weight: bold;
        border-radius: 500px;
        overflow: hidden;
        position: relative;
      }
      button {
        display: flex;
        align-items: center;
        gap: 1rem;
        height: 100%;
      }
      button:active {
        transform: scale(0.9);
      }
      .bi-cart-check {
        position: absolute;
        left: calc(50% - 12px);
        transform: translateX(-300px) rotate(-30deg);
      }
      button.active span {
        transition: all 1s;
        transform: translateY(-100px);
      }
      button.active .bi-plus {
        transition: all 1s;
        transform: translateY(-100px) rotate(-180deg);
      }
      button.active .bi-cart-check {
        animation: moveCart 2s 0.5s;
      }
      @keyframes moveCart {
        49% {
          transform: translateX(0);
        }
        59% {
          transform: translateX(0) rotate(0);
        }
        65% {
          transform: translateX(0) rotate(0);
        }
        70% {
          transform: translateX(0) rotate(-30);
        }
        100% {
          transform: translateX(300px) rotate(-30deg);
        }
      }

    /* LAYOUT FOR THE SLIDE */
      div.payButton {
        display: flex;
        justify-content: center;
        align-content: center;
      }
      .container {
        display:flex;
        flex-direction: column;
      }
      [type="checkbox"] {
        margin-bottom:3rem;
      }
      [type="checkbox"]:checked ~ div button {
        overflow:visible;
      }
    </style>
    <div class="container">
      <label for="showHidden1">overflow:visible;</label>
      <input type="checkbox" id="showHidden1">
      <div class="payButton">
        <button id="payButton">
          <svg
          xmlns="http://www.w3.org/2000/svg"
          width="50"
          height="50"
          fill="currentColor"
          class="bi bi-cart-check"
          viewBox="0 0 16 16"
        >
          <path
            d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"
          />
          <path
            d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"
          />
        </svg>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="50"
          height="50"
          fill="currentColor"
          class="bi bi-plus"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"
          />
        </svg>
        <span>Add To Cart</span>
      </button>
    </div>
  </div>

    <script>
      document
        .querySelector("#payButton")
        .addEventListener("click", (e) => document
        .querySelector("#payButton").classList.toggle("active"));
      document
        .querySelector(".bi-cart-check")
        .addEventListener("animationend", (e) => {
          document.querySelector("#payButton").classList.toggle("active");
        });
    </script>
  
